{
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": false, 
    "jsx": "react"
  },
  "include": [
    "src",
    "app",
    "app.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
